<%- include('layouts/header', { title: "商品編集" } ) %>
<body>
  <h2>商品編集</h2>
  <% if (modified) {%>
    <p>
      <span>商品が編集されました</span>
      <ul>
        <li><%= item.name %></li>
        <li><%= item.description %></li>
        <li><%= item.price %></li>
        <li><%= item.default_inventory %></li>
        <li><%= item.inventory %></li>
      </ul>
    </p>
  <% } %>
  <form method="POST" action="/items/<%= item.id %>/edit">
    <label for="name">商品名</label>
    <input type="hidden" value="<%= item.id %>">
    <input id="name" name="name" value="<%= item.name %>"/>
    <label for="description">商品説明</label>
    <input id="description" name="description" value="<%= item.description %>" />
    <label for="price">価格</label>
    <input id="price" name="price" value="<%= item.price %>" />
    <label for="default_inventory">デフォルトの注文可能数（空欄の場合は無制限に注文可能です）</label>
    <input id="default_inventory" type=number name="default_inventory" value="<%= item.default_inventory %>" />
    <label for="inventory">現在の注文可能数（空欄の場合はデフォルトの注文可能数が使われます）</label>
    <input id="inventory" type=number name="inventory" value="<%= item.inventory %>" />
    <input type="submit" value="変更"/>
  </form>
<%- include('layouts/footer.ejs') %>
